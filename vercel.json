{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/[...path].js"
    }
  ],
  "functions": {
    "api/[...path].js": {
      "includeFiles": "**/*.html",
      "includeFiles": "**/*.css",
      "includeFiles": "**/*.js"
    }
  }
}
